{
  "compilerOptions": {
    "target": "es2024",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "~/*": [
        "./src/*"
      ]
    },
    "outDir": "./lib",
    "rootDir": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}